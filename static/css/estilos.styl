@import "slider.styl"

.u-title
  border-bottom 2px dashed #00CCFF
  color #00CCFF
  font-weight normal
  text-align center
  padding-bottom .5em

.u-containerDefault
  max-width 800px
  margin 0 auto

.Header
  margin-top 3.75em
  background-image url('../images/portada.jpg')
  background-repeat no-repeat
  background-position center
  -webkit-background-size cover
  background-size cover
  text-align center
  padding 1.2em 0

.Header-image
  border 5px solid white
  border-radius 50%

.Header-imageContainer
  margin 0

.Header-name,
.Header-link
  color white

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.MainMenu
  background-color #1E1E1E
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.5em

.MainMenu-list
  margin 0
  padding 0

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  border-radius 2em
  color white
  margin-right .5em
  padding .5em 1em
  text-decoration none
  display inline-block
  margin-bottom 1em
  &.twitter
    background #55ACEE
  &.facebook
    background #4862A3
  &.github
    background #829AA8

.Profile-span

.Work
  margin-top 2em
  text-align center
  padding 0 1em
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  // margin-right 1.8em
  margin-bottom 1.8em

.Work-imageContainer
  margin 0
  border 4px solid #00CCFF
  border 4px solid orange

.Work-description
  font-size 1.1em
  color #515151
  font-style italic

.Footer
  background-image url('../images/footer.jpg')
  background-repeat no-repeat
  background-position center
  -webkit-background-size cover
  background-size cover
  padding 2em 0
  text-align center

.Footer-form
  display inline-block
  text-align center

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  background white
  border none
  border-radius 1em
  display block
  padding .5em
  margin 0 auto 1em
  outline 0 //Para que no se muestre el cuadro azul al seleccionar el input o el textarea

.Footer-textarea
  resize none
  height 4em

.Footer-button
  background orange
  color white
  border-radius 1em
  padding .5em 1em
  border none
  
.Slider
  background white
  &-container
    max-width 1024px
    margin 0 auto
   
  // Creando los mediaquerys
  // Para dispositivos pequeños ifones y celulares
@media screen and (max-width: 480px) 
  .Profile //Los botones de Redes sociales se veran completos en Cels Vertical
    &-link
      display block
      
  //hasta antes del ipad
@media screen and (max-width: 767px)
  .Footer //Los inputs del footer tomaran tamaño completo en Cels o antes de ipad Horizontal
    &-form
      display block
    &-formInput  
    &-textarea  
      width 90%
      box-sizing border-box
